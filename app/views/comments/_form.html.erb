<% if @comment.errors.any? %>

    <h2>Error while creating due to</h2>
    <ul>
        <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<div class="card">
  <div class="card-body">
        <%= form_with(model: @comment, local: true) do |f|%>
            <p>
                <%=f.label :comment%><br/>
                <%=f.text_area :comment,class: "form-control"%>
            </p>

             <p>
                <%=f.label :current_user%><br/>
                <%=f.text_area :user_id, id: :comment_user_id,value: current_user.id, class: "form-control"%>
            </p>

            <p>
                <%=f.submit class:"btn btn-success"%>
            </p>

        <% end %>
    </div>
</div>