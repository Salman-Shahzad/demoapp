<div class="card">
  <div class="card-header">
    <h1>Showing the comments</h1>
  </div>
<div class="card-body">
    <p><strong>Description: </strong><%=@comment.comment%></p>


    <%=link_to 'Edit Comment',edit_comment_path(@comment),class:"btn btn-warning"%> |
    <%=link_to 'Delete',comment_path(@comment), method: :delete,data: { confirm:"Are you sure"},class:"btn btn-danger" %> |
    <%=link_to 'Back',comment_path(@comment),class:"btn btn-secondary"%>
</div>