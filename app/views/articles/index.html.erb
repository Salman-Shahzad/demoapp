<div class="card">
  <div class="card-header">
     <h1>Showing all articles available</h1>
  </div>
   <div class="card-body">
 
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th colspan="3">Actions</th>
                    <th> Author </th>
                </tr>
            </thead>

            <tbody>
                <%@articles.each do |article|%>
                
                <tr>
                    <%if article.user_id==current_user.id %>
                        <td><%=article.title%></td>
                        <td><%=article.description%></td>
                        <td><%=link_to 'Show',article_path(article),class:"btn btn-secondary"%></td>
                        <td><%=link_to 'Edit Article',edit_article_path(article),class:"btn btn-warning"%></td>
                        <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure"},class:"btn btn-danger" %></td>
                        <td><%=current_user.email%></td>
                    <%end%>
                </tr>

                <%end%>
            </tbody>



        </table>
    </div>
</div>
<br >
<p>
     <%=link_to 'Create an Article',new_article_path, class:"btn btn-primary"%>
</p>